{
    "version": "2.0.0",
    "tasks": [   
        {
            "label": "cmake build",
            "type": "shell",
            "command": "cd build && cmake .. && make"
        },
        {
            "label": "Ubuntu C++",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-o",
                "algorithm",
                "main.cpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            }
        }
    ]
}